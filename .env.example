# ===========================================
# Crew Dashboard Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ========== SUPABASE (Required) ==========
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# ========== AIMS API (Optional) ==========
# Set AIMS_ENABLED=true when credentials are configured
# Get credentials from your AIMS administrator

AIMS_ENABLED=false
AIMS_WSDL_URL=https://your-aims-server.aims.aero/api/soap/aimswebservice?singlewsdl
AIMS_USERNAME=
AIMS_PASSWORD=

# AIMS API Timeouts (seconds)
AIMS_TIMEOUT=30
AIMS_MAX_RETRIES=3

# ========== APPLICATION ==========
SECRET_KEY=your-secret-key-change-in-production
DEBUG=false
LOG_LEVEL=INFO

# ========== ETL SCHEDULER ==========
# Interval between ETL syncs (minutes)
ETL_INTERVAL_MINUTES=15

# Date range for AIMS data fetch (days before/after today)
ETL_DATE_RANGE_DAYS=30

# ========== FEATURE FLAGS ==========
# Toggle features on/off

# Auto-detect CSV file changes and refresh
FEATURE_FILE_WATCHER=true

# Auto-refresh browser when data changes
FEATURE_AUTO_REFRESH=true

# Enable AIMS SOAP integration
FEATURE_AIMS_INTEGRATION=false
